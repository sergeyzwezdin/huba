{
  "name": "claude-tasks",
  "version": "0.1.0",
  "description": "TUI for managing Claude Code tasks - search, view, create, edit, and delete tasks across projects",
  "type": "module",
  "private": true,
  "author": "Sergey Zwezdin",
  "homepage": "https://github.com/sergeyzwezdin/claude-tasks",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sergeyzwezdin/claude-tasks.git"
  },
  "scripts": {
    "dev": "bun run --watch index.tsx",
    "typecheck": "tsc --noEmit",
    "format": "biome check",
    "format:file": "biome check --write --log-level=warn",
    "lint": "biome lint"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.15",
    "@types/bun": "latest",
    "@types/react": "^19"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "@opentui/core": "^0.1.79",
    "@opentui/react": "^0.1.79",
    "@tanstack/react-query": "^5.90.21",
    "jotai": "^2.17.1",
    "react": "^19",
    "zod": "^4.3.6"
  },
  "patchedDependencies": {
    "@types/react@19.2.14": "patches/@types%2Freact@19.2.14.patch"
  }
}
